.card
    width: 80%
    box-shadow: 0 0 10px var(--tertiaryColor)
    display: flex
    justify-content: space-around
    background-color: var(--navColor)

    &__draw
        width: 40%

        & svg
            width: 100%

    &__content
        width: 45%
        margin-top: 5rem
        font-family: var(--primaryFont)
        line-height: 2rem

        &-title
            margin-bottom: 2rem
            color: var(--tertiaryColor)

        &-text
            margin-bottom: 3rem
            color: var(--tertiaryColor)

        &-link:visited
            color: var(--linearGradient1)

        &-social
            width: 100%
            display: flex
            flex-wrap: wrap
            justify-content: space-around
            align-items: center

.social-media
    width: 30%