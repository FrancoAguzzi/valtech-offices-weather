.card-slider
    width: 650px
    height: 100vh
    position: fixed
    z-index: 2
    top: 0
    right: -650px
    background: linear-gradient(linearGradient1, linearGradient2, linearGradient3, primaryColor) 
    transition: all .4s

    &.opened
        right: 0
        transition: all .4s

    &__closer
        border: none
        padding: 0
        background: transparent
        transition: all .4s

        &:hover
            transform: scale3d(1.3, 1.3, 1.3)
            transition: transform .4s
            cursor: pointer
        
