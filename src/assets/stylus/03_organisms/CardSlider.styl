.card-slider
    width: remify(40%)
    height: 100vh
    position: fixed
    top: 0
    right: remify(-40%)
    z-index: 2
    background: linear-gradient(linearGradient1, linearGradient2, linearGradient3, primaryColor) 
    border-left: remify(1px) solid secondaryColor
    transition: all .4s

    &.opened
        right: 0
        transition: all .4s

    &__header
        height: 3%
        margin: 2.5% 2.5% 0 2.5% 
        display: flex
        justify-content: space-between

        &-close
            height: 100%
            padding: 0
            background: transparent
            outline: none
            border: none
            transition: all .4s

            &:hover
                cursor: pointer
                transform: scale3d(1.3, 1.3, 1.3)
                transition: transform .4s

        &-checkbox
            position: relative
            display: flex

            &-input:checked + label:before
                left: remify(28px)
                transition: all .3s

            &-input
                visibility: hidden
                position: absolute
                z-index: -2

            &-label
                position: relative
                width: remify(55px)
                height: remify(29px)
                border-radius: remify(10px)
                background-color: primaryColor
                cursor: pointer
                display: flex
                justify-content: space-around
                align-items: center

                &-option
                    z-index: 2
                    color: tertiaryColor
                    font-family: primaryFont
                    font-weight: bold

                &:before
                    content: ''
                    position: absolute
                    top: remify(2px)
                    left: remify(2px)
                    width: remify(25px)
                    height remify(25px)
                    z-index: 1
                    border-radius: remify(8px)
                    background-color: linearGradient1
                    transition: all .3s

    &__forecast
        width: 100%
        height: 97%
        display: flex
        flex-direction: column
        align-items: center

        &-items
            min-width: 30%
            height: 40%
            display: flex
            flex-direction: column
            align-items: center

        &-city
            box-sizing: border-box
            height: 25%
            padding-top: 5%
            font-family: primaryFont
            font-size: 4.5rem

        &-icon
            width: 7rem
            height: 7rem
            margin-bottom: -0.75rem

            &-img
                width: 100%
                height: 100%

        &-temperature
            color: primaryColor 
            font-family: primaryFont
            font-size: 4.5rem
            font-weight: bold 
            align-self: flex-end

        &-feelslike
            margin-top: .75rem
            color: primaryColor
            font-family: primaryFont
            font-size: 1.5rem
            font-weight: bold
            align-self: flex-end

            & span
                color: tertiaryColor
        
        &-temps
            height: 5%
            display: flex
            color: tertiaryColor
            font-family: primaryFont
            font-size: 1.5rem
            font-weight: bold

            &-separator
                margin: 0 .5rem 0 .5rem

        &-info
            width: 100%
            height: 30%
            background-color: primaryColor
            border-top: remify(1px) solid secondaryColor
            box-shadow: 0 -0.75rem 6rem primaryColor
            display: flex
            justify-content: center

        &-humidity
            color: linearGradient1
            font-family: primaryFont
            font-size: 2.5rem
            display: flex
            flex-direction: column
            justify-content: center
            align-items: center

            & span
                width: 100%
                margin-top: 13%
                color: tertiaryColor
                font-size: 1.25rem

        &-windspeed
            margin-left: 7%
            display: flex
            flex-direction: column
            justify-content: center
            align-items: center

            & span
                width: 100%
                margin-top: 7%
                color: tertiaryColor
                font-family: primaryFont
                font-size: 1.25rem
                text-align: center

            &-value
                color: linearGradient1
                font-family: primaryFont
                font-size: 2.5rem

                & span 
                    color: linearGradient1
                    margin-left: -5%
            
        &-weather
            margin: 1.5% 0 0 5%
            display: flex
            flex-direction: column
            justify-content: center
            align-items: center
            font-family: primaryFont

            &-description1
                font-size: 2rem
                color: linearGradient1
            
            &-description2
                text-align: center
                margin-top: 5%
                width: 100%
                font-size: 1.5rem
                color: tertiaryColor
            
