.navigation
    width: 100%
    height: 3.5rem
    background-color: var(--navColor)
    box-shadow: 0px 5px 10px var(--secondaryColor)
    display: flex
    justify-content: space-between
    z-index: 1
    position: relative

    &__links
        width: 20%
        height: 100%
        margin-left: 2.5%
        display: flex
        justify-content: space-around
        align-items: center

    a
        font-size: 1rem 
        font-family: var(--primaryFont)
        color: var(--tertiaryColor)
        text-decoration: none
        margin-bottom: remify(-5px) 
        padding-bottom: remify(5px)
        border-bottom: 3px solid transparent
        transition: all .4s

        &:hover
            border-bottom: 3px solid var(--linearGradient1)
            transition: all .4s

    &__dark
        justify-self: flex-end
        display: flex
        align-items: center

        &-input
            position: absolute
            left: -99999px
            top: -99999px

            &:checked + label:before
                background-color: var(--linearGradient1)
                transition: all .4s

            &:checked + label:after
                left: -1.8rem
                transition: all .4s

        &-label
            font-size: 1rem 
            position: relative
            font-family: var(--primaryFont)
            color: var(--tertiaryColor)
            margin-right: 2rem
            cursor: pointer

            &:before
                content: ''
                position: absolute
                left: -3rem
                top: 0
                width: 2rem
                height: 1rem
                border: 1px solid var(--tertiaryColor)
                border-radius: .5rem
                background-color: var(--navColor)
                transition: all .2s
                cursor: pointer

            &:after
                content: ''
                position: absolute
                left: -2.8rem
                top: .2rem
                width: .75rem
                height: .75rem
                border-radius: 50%
                background-color: var(--tertiaryColor)
                transition: all .4s
                cursor: pointer

            &:hover:before
                background-color: var(--secondaryColor)