.app
    width: 100%
    height: 100%
    position: fixed
    display: flex
    flex-direction: column
    justify-content: center
    align-items: center

    &__title
        color: var(--tertiary-color)
        font-family: var(--primary-font)
        font-size: remify(45px)
        font-weight: bold
        text-transform: capitalize

    &__content
        width: 100%
        height: 80%
        display: flex
        flex-direction: row
        justify-content: center
        align-items: center 
